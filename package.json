{
  "name": "@useward/instrumentation",
  "version": "0.1.0",
  "private": true,
  "description": "Next.js-native observability toolkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/useward/ward.git"
  },
  "homepage": "https://github.com/useward/ward#readme",
  "bugs": {
    "url": "https://github.com/useward/ward/issues"
  },
  "scripts": {
    "build": "pnpm --filter './packages/*' build",
    "dev": "pnpm --filter './packages/*' dev",
    "test": "pnpm --filter './packages/*' test",
    "lint": "biome check .",
    "format": "biome check --write .",
    "typecheck": "pnpm --filter './packages/*' typecheck",
    "clean": "pnpm --filter './packages/*' clean",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "nextjs",
    "observability",
    "opentelemetry",
    "tracing",
    "performance"
  ],
  "author": "PerfoTech, LLC",
  "license": "FSL-1.1-Apache-2.0",
  "packageManager": "pnpm@10.11.1",
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@changesets/cli": "^2.29.7",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  }
}
