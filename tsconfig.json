{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "paths": {
      "@nextdoctor/core": ["./packages/core/src"],
      "@nextdoctor/core/*": ["./packages/core/src/*"],
      "@nextdoctor/nextjs": ["./packages/nextjs/src"],
      "@nextdoctor/server": ["./packages/server/src"],
      "@nextdoctor/shared": ["./packages/shared/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
