{
  "name": "@useward/devtools",
  "version": "0.1.1",
  "description": "Development server for Next.js observability",
  "type": "module",
  "main": "./dist/index.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/useward/ward.git",
    "directory": "packages/devtools"
  },
  "homepage": "https://github.com/useward/ward#readme",
  "bugs": {
    "url": "https://github.com/useward/ward/issues"
  },
  "keywords": [
    "nextjs",
    "devtools",
    "observability",
    "opentelemetry",
    "performance"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "pnpm dev:server & pnpm dev:ui",
    "dev:server": "tsx watch server/index.ts",
    "dev:ui": "cd client && pnpm install && pnpm run dev",
    "build:server": "tsdown",
    "build": "pnpm build:server && pnpm build:ui",
    "build:ui": "cd client && pnpm install && pnpm run build",
    "start": "pnpm start:server",
    "start:ui": "cd client && pnpm preview",
    "start:server": "node dist/index.mjs"
  },
  "bin": {
    "ward": "./dist/index.mjs"
  },
  "author": "PerfoTech, LLC",
  "license": "FSL-1.1-Apache-2.0",
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@opentelemetry/otlp-transformer": "^0.208.0",
    "effect": "^3.19.8",
    "hono": "^4.10.7"
  },
  "devDependencies": {
    "@useward/shared": "workspace:*",
    "@types/node": "^24.10.1",
    "tsdown": "^0.16.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
