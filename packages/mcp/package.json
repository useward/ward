    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^24.10.1",
    "tsdown": "^0.16.7",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
