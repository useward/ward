{
  "name": "@useward/mcp",
  "version": "0.1.0",
  "description": "MCP server for Ward - exposes Next.js observability to AI tools",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/useward/ward.git",
    "directory": "packages/mcp"
  },
  "homepage": "https://github.com/useward/ward#readme",
  "bugs": {
    "url": "https://github.com/useward/ward/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "nextjs",
    "observability",
    "opentelemetry"
  ],
  "author": "PerfoTech, LLC",
  "license": "FSL-1.1-Apache-2.0",
  "bin": {
    "ward-mcp": "./dist/index.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
